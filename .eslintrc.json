{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "comma-dangle": ["error", "always-multiline"],
        "indent": ["error", 4],
        "no-console": "error",
        "no-cond-assign": "error",
        "no-constant-condition": "error",
        "no-unreachable": "error",
        "no-unused-vars": "error",
        "eqeqeq": ["error", "always"],
        "max-lines-per-function": ["warn", { "max": 30 }],
        "no-alert": "error",
        "semi": ["error", "never"]
    }
}
